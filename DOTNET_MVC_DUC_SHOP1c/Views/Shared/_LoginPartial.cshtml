@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link" href="/Cart/Index">
            <span id="CartLength" class="badge text-bg-info">0</span>
            <i class="fa-solid fa-cart-shopping"></i>
        </a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-light" asp-area="Identity" 
               asp-page="/Account/Manage/Index" title="Manage">
                <i class="fa-solid fa-user"></i>
                <span id="username"> @User.Identity.Name </span>
            </a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-light"> @localizer["Logout"] </button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Register"> @localizer["Register"] </a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login"> @localizer["Login"] </a>
    </li>
}
</ul>
