@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model DOTNET_MVC_DUC_SHOP1c.Models.Product
@{
    ViewData["Title"] = "Details";
}

<div class="text-center">
    <h1 class="display-4">@localizer["Details"] </h1>
    
</div>

<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @localizer["Name"]  
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @localizer["Description"]  
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @localizer["Price"] 
        </dt>
        <dd class="col-sm-10">
            $ @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @localizer["Category"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <dt class="col-sm-2">
            @localizer["Province/City"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.District.ProvinceCity.Name)
        </dd>
        <dt class="col-sm-2">
            @localizer["District"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.District.Name)
        </dd>
        <dt class="col-sm-2">
            @localizer["Image"]
        </dt>
        <dd class="col-sm-10">
            <img class="card-img-top my-1 mx-auto"
                 src="@Model.ImageUrl"
                 alt="Card image"
                 style="width:14rem ;height: 8rem">
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="AddUpdate" asp-route-id="@Model.Id" class="btn btn-primary rounded">
            <i class="fa-solid fa-pen-to-square"></i> @localizer["Edit"]
        </a>
        <a onclick="return confirm('Are you sure that you really want to delete this ? ')" asp-action="Delete"
           asp-route-id="@Model.Id" class="btn btn-danger rounded">
            <i class="fa-solid fa-trash"></i> @localizer["Delete"]
        </a>
    }
    
    <a asp-action="Index" class="btn btn-success rounded">
        <i class="fa-solid fa-backward"></i> @localizer["Back to home"]
    </a>
</div>
