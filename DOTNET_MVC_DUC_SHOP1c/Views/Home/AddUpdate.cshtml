@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model DOTNET_MVC_DUC_SHOP1c.Models.Product
@{
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddUpdate" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label"> @localizer["Name"] </label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> @localizer["Price"]</label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" required />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> @localizer["Description"] </label>
                <textarea asp-for="Description" class="form-control" required rows="4" cols="50"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label class="control-label"> @localizer["Category"] </label>
                <select asp-for="CategoryId" asp-items="ViewBag.categoryList" class="form-select">
                    <option disabled selected>--@localizer["Select"]--</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> @localizer["Province/City"]  </label>
                <select asp-for="ProvinceCityId" asp-items="ViewBag.provinceCityList" class="form-select"
                        id="ProvinceCityId">
                    <option disabled selected>--@localizer["Select"]--</option>
                </select>
                <span asp-validation-for="ProvinceCityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> @localizer["District"] </label>
                <select asp-for="DistrictId" class="form-select" id="DistrictId">
                   
                </select>
                <span asp-validation-for="DistrictId" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label class="control-label">@localizer["Image"] </label>
                <input type="file" name="file" class="form-control" accept="image/*" required />
            </div> 
            <div class="form-group">
                <button type="submit" class="btn btn-primary my-1">
                     @localizer["Save"]
                </button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary my-1"> 
        <i class="fa-solid fa-backward"></i> @localizer["Back to home"]
    </a>
</div>


@section Scripts {
    <script src="~/js/home.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
