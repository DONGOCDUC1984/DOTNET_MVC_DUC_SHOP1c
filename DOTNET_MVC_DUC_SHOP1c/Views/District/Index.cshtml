@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model List<DOTNET_MVC_DUC_SHOP1c.Models.District> 
@{
    ViewData["Title"] = "District";
}

<div class="text-center">
    <h1 class="display-4"> @localizer["District"] </h1>
</div>
<p>
    <a asp-action="AddUpdate" class="btn btn-primary">
        <i class="fa-solid fa-plus"></i> @localizer["Create New"]
    </a>
</p>

@if (Model != null &&  Model.Count > 0)
{
    <table class="table table-bordered table-hover mx-auto w-50">
        <thead>
            <tr>
                <th> Id </th>
                <th> @localizer["District"] </th>
                <th> @localizer["Province/City"] </th>
                <th> @localizer["Actions"] </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.ProvinceCityName
                    </td>
                    
                    <td>
                        <a asp-action="AddUpdate" asp-route-id="@item.Id" class="btn btn-primary" >
                            <i class="fa-solid fa-pen-to-square"></i> @localizer["Edit"]
                        </a>
                        <a onclick="return confirm('Are you sure that you really want to delete this ? ')"
                           asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" >
                            <i class="fa-solid fa-trash"></i> @localizer["Delete"]
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}